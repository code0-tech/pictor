{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "src/",
    "paths": {
      "utils": [
        "src/utils/*"
      ],
      "components": [
        "src/components/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ],
  "types": [
    "typePatches"
  ]
}