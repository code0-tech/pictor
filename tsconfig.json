{
  "compilerOptions": {
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "bundler",
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "src/",
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    ".storybook"
  ],
  "types": [
    "typePatches"
  ]
}