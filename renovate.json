{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>code0-tech/monoceros//renovate/global.json5",
    ":assignee(nicosammito)"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "asdf",
        "github-actions",
        "gitlabci",
        "gitlabci-include"
      ],
      "extends": [
        ":assignee(Taucher2003)"
      ]
    },
    {
      "matchPackageNames": [
        "playwright",
        "ghcr.io/code0-tech/build-images/node-playwright",
        "node"
      ],
      "groupName": "node-playwright",
      "separateMajorMinor": false,
      "extends": [
        ":assignee(Taucher2003)"
      ]
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "ghcr.io/code0-tech/build-images/node-playwright"
      ],
      "versioning": "regex:^(?<build>\\d+)\\.(?<revision>\\d+)-node-(?<major>\\d+)\\.(?<minor>\\d+)$"
    }
  ]
}
